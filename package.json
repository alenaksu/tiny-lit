{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "lerna run test",
        "build": "lerna run build",
        "size": "npm run build && size-limit",
        "npm-publish": "./scripts/publish.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern \"@(src|test|demo)/**/*.@(ts|js)\""
        }
    },
    "size-limit": [
        {
            "limit": "4 KB",
            "path": "packages/**/lib/esm/index.js"
        }
    ],
    "devDependencies": {
        "@types/jasmine": "^3.3.13",
        "husky": "^2.3.0",
        "jasmine": "^3.4.0",
        "jasmine-core": "^3.4.0",
        "karma": "^4.1.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^2.0.1",
        "karma-typescript": "^4.0.0",
        "lerna": "^3.14.1",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.17.1",
        "pretty-quick": "^1.11.0",
        "size-limit": "^1.3.5",
        "terser": "^4.0.0",
        "ts-loader": "^6.0.2",
        "tslint": "^5.17.0",
        "typescript": "^3.4.5",
        "uglify-es": "^3.3.9"
    },
    "dependencies": {
        "@tiny-lit/core": "^1.0.0-alpha.21",
        "@tiny-lit/element": "^1.0.0-alpha.21",
        "@tiny-lit/router": "^1.0.0-alpha.21",
        "@tiny-lit/store": "^1.0.0-alpha.21"
    }
}
