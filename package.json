{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "test": "lerna run test",
        "build": "lerna run build",
        "size": "npm run build && size-limit",
        "demo": "parcel packages/demo/index.html",
        "build-demo": "rm -rf docs/demo && parcel build packages/demo/index.html --public-url https://alenaksu.github.io/tiny-lit/demo/ -d docs/demo",
        "npm-publish": "./scripts/publish.sh"
    },
    "lint-staged": {
        "@(src|test|demo)/**/*.@(ts|js)": [
            "prettier --write",
            "git add"
        ]
    },
    "size-limit": [
        {
            "limit": "4 KB",
            "path": "packages/**/lib/esm/index.js"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-stage-2": "^7.0.0",
        "@types/jasmine": "^3.3.8",
        "@webcomponents/custom-elements": "^1.2.1",
        "@webcomponents/webcomponentsjs": "^2.2.1",
        "husky": "^1.3.1",
        "jasmine": "^3.0.0",
        "jasmine-core": "^3.1.0",
        "karma": "^4.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^2.0.1",
        "karma-typescript": "^4.0.0",
        "lerna": "^3.4.1",
        "lint-staged": "^8.1.3",
        "microbundle": "^0.9.0",
        "npm-run-all": "^4.1.2",
        "parcel-bundler": "^1.10.3",
        "prettier": "^1.10.2",
        "size-limit": "^0.21.1",
        "ts-loader": "^5.3.3",
        "tslint": "^5.9.1",
        "typescript": "^3.1.3",
        "uglify-es": "^3.3.9"
    }
}
