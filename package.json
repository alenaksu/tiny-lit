{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "precommit": "lint-staged",
        "test": "lerna run test",
        "build": "lerna run build",
        "size": "npm run build && size-limit",
        "npm-publish": "./scripts/publish.sh"
    },
    "lint-staged": {
        "@(src|test|demo)/**/*.@(ts|js)": [
            "prettier --write",
            "git add"
        ]
    },
    "size-limit": [
        {
            "limit": "4 KB",
            "path": "packages/**/lib/esm/index.js"
        }
    ],
    "devDependencies": {
        "@types/jasmine": "^3.3.8",
        "husky": "^1.3.1",
        "jasmine": "^3.0.0",
        "jasmine-core": "^3.1.0",
        "karma": "^4.0.0",
        "karma-chrome-launcher": "^2.2.0",
        "karma-coverage": "^1.1.1",
        "karma-jasmine": "^2.0.1",
        "karma-typescript": "^4.0.0",
        "lerna": "^3.4.1",
        "lint-staged": "^8.1.3",
        "prettier": "^1.10.2",
        "size-limit": "^0.21.1",
        "terser": "^3.16.1",
        "ts-loader": "^5.3.3",
        "tslint": "^5.9.1",
        "typescript": "^3.1.3",
        "uglify-es": "^3.3.9"
    },
    "dependencies": {
        "@tiny-lit/core": "^1.0.0-alpha.21",
        "@tiny-lit/element": "^1.0.0-alpha.21",
        "@tiny-lit/router": "^1.0.0-alpha.21",
        "@tiny-lit/store": "^1.0.0-alpha.21"
    }
}
