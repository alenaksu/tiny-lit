{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "postinstall": "npm i -g lerna && lerna bootstrap",
        "test": "lerna run test",
        "build": "lerna run build",
        "size": "size-limit",
        "npm-publish": "./scripts/publish.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged --pattern \"@(src|test|demo)/**/*.@(ts|js)\""
        }
    },
    "size-limit": [
        {
            "name": "element",
            "limit": "2.9 KB",
            "path": "packages/element/dist/esm/index.js"
        },
        {
            "name": "core",
            "limit": "2.3 KB",
            "path": "packages/core/dist/esm/index.js"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^4.5.0",
        "@types/jasmine": "^3.5.10",
        "husky": "^4.2.5",
        "jasmine": "^3.5.0",
        "jasmine-core": "^3.5.0",
        "karma": "^5.0.4",
        "karma-chrome-launcher": "^3.1.0",
        "karma-coverage": "^2.0.2",
        "karma-jasmine": "^3.1.1",
        "karma-typescript": "^5.0.2",
        "karma-typescript-es6-transform": "^5.0.2",
        "lerna": "^3.20.2",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "size-limit": "^4.4.5",
        "ts-loader": "^7.0.2",
        "tslint": "^6.1.2",
        "typescript": "^3.8.3",
        "uglify-es": "^3.3.9"
    },
    "name": "tiny-lit"
}
