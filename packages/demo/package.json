{
    "name": "demo-site",
    "private": true,
    "description": "",
    "scripts": {
        "start": "parcel index.html --no-cache",
        "build": "rm -rf ../../docs/demo && parcel build index.html --no-cache --public-url https://alenaksu.github.io/tiny-lit/demo/ -d ../../docs/demo"
    },
    "repository": "alenaksu/tiny-lit",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-modules": "^0.1.3",
        "@babel/preset-typescript": "^7.9.0",
        "@parcel/transformer-typescript-tsc": "^2.0.0-alpha.3",
        "parcel-bundler": "^1.12.4"
    },
    "dependencies": {
        "@tiny-lit/core": "^2.0.0-alpha.3",
        "@tiny-lit/element": "^2.0.0-alpha.3",
        "@tiny-lit/router": "^2.0.0-alpha.3",
        "@tiny-lit/store": "^2.0.0-alpha.3"
    },
    "publishConfig": {
        "access": "restricted"
    },
    "browserslist": [
        "Chrome > 50"
    ],
    "babel": {
        "presets": [
            [
                "@babel/preset-modules",
                {
                    "loose": true
                }
            ]
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true,
                    "spec": true
                }
            ]
        ]
    }
}
