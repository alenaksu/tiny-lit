{
    "name": "@tiny-lit/store",
    "version": "1.0.0-alpha.21",
    "main": "dist/store.js",
    "module": "dist/store.m.js",
    "umd:main": "dist/store.umd.js",
    "source": "src/index.ts",
    "license": "MIT",
    "repository": "alenaksu/tiny-lit",
    "scripts": {
        "start": "microbundle watch",
        "clear": "rm -rf dist/",
        "build": "npm run clear && microbundle build",
        "lint": "tslint --project ./",
        "size": "npm run build && size-limit",
        "test": "karma start --single-run --browsers ChromeHeadless ../../karma.conf.js",
        "release": "npm-run-all build test"
    },
    "typings": "./dist/index.d.ts",
    "size-limit": [
        {
            "limit": "0.9 KB",
            "path": "dist/store.m.js"
        }
    ],
    "publishConfig": {
        "access": "public"
    }
}
