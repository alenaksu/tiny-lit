{
    "name": "@tiny-lit/element",
    "version": "1.0.0-alpha.9",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "license": "MIT",
    "dependencies": {
        "@tiny-lit/core": "^1.0.0-alpha.9"
    },
    "scripts": {
        "start": "tsc -w",
        "clear": "rm -rf lib/",
        "build": "npm run clear && tsc --outDir lib/esm && tsc --target es5 --outDir lib/cjs --module commonjs",
        "lint": "tslint --project ./",
        "size": "npm run build && size-limit",
        "test": "karma start --single-run --browsers ChromeHeadless ../../karma.conf.js",
        "release": "npm-run-all build test"
    },
    "typings": "./types/index.d.ts",
    "size-limit": [
        {
            "limit": "1 KB",
            "path": "lib/esm/index.js"
        }
    ],
    "publishConfig": {
        "access": "public"
    }
}
