{
    "name": "@tiny-lit/core",
    "version": "1.0.0-alpha.20",
    "main": "dist/core.js",
    "module": "dist/core.m.js",
    "umd:main": "dist/core.umd.js",
    "source": "src/index.ts",
    "license": "MIT",
    "repository": "alenaksu/tiny-lit",
    "scripts": {
        "start": "microbundle watch",
        "clear": "rm -rf dist/",
        "build": "npm run clear && microbundle build",
        "lint": "tslint --project ./",
        "size": "npm run build && size-limit",
        "test": "karma start --single-run --browsers ChromeHeadless ../../karma.conf.js",
        "pub": "npm publish",
        "release": "npm-run-all build test pub"
    },
    "typings": "./dist/index.d.ts",
    "size-limit": [
        {
            "limit": "2.0 KB",
            "path": "dist/core.m.js"
        }
    ],
    "publishConfig": {
        "access": "public"
    }
}
